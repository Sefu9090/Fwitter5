

<h3>Sign Up</h3>
<form action="/sign-up" method="POST">
  <p>Name: <input type="text" name="username"></p>
  <p>Password:<input type="password" name="password"></p>
  <input class="btn btn-primary" type="submit">
</form>


<h2>Users</h2>
<% @users.each do |user| %>
  <p><%= user.username %></p>
<% end %>